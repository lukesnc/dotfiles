#!/usr/bin/env bash

set -ex

DRIVE="/Volumes/vault3"

# Check for rsync
command -v rsync

# Make sure backup drive exists
[ -d "$DRIVE" ]

# Check for dry run
rsync_args=("-av")
while getopts "n" opt; do
    case "$opt" in
        n)
            rsync_args+=("-n")
            ;;
    esac
done

# Add macos excludes
rsync_args+=(
    --exclude=".DS_Store"
    --exclude="._*"
    --exclude=".Spotlight-V100"
    --exclude=".Trashes"
    --exclude=".fseventsd"
    --exclude=".VolumeIcon.icns"
)

# Sync
rsync "${rsync_args[@]}" "$HOME/Documents/REAPER Media/" "$DRIVE/Music/REAPER Media Backup/"
