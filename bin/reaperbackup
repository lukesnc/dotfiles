#!/usr/bin/env bash

set -ex

drive='/Volumes/vault3'

# Check for rsync
command -v rsync

# Make sure backup drive exists
[ -d "$drive" ]

# Sync
rsync \
    -av \
    --exclude '._*' \
    --exclude '.DS_Store' \
    "$HOME/Documents/REAPER Media/" \
    "$drive/Music/REAPER Media Backup/"

dot_clean "$drive"
